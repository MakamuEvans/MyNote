<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/read_theme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/close_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@mipmap/ic_close"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editor_bold"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:src="@mipmap/ic_action_format_bold"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/editor_bullets"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:src="@mipmap/ic_action_format_list_bulleted"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/editor_numbers"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:src="@mipmap/ic_action_format_list_numbered"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/insert_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:onClick="galleryImage"
                    android:src="@mipmap/ic_action_photo" />

                <ImageView
                    android:id="@+id/take_image"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:onClick="cameraImage"
                    android:src="@mipmap/ic_action_camera_alt"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/save_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/default_input_text"
                    android:onClick="saveNote"
                    android:text="Save"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/update_note"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/default_input_text"
                    android:onClick="updateNote"
                    android:text="Update"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:hint="Title"
                android:inputType="textCapSentences"
                android:textIsSelectable="true"
                android:textStyle="bold" />


            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/notes_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/read_theme"
                android:layout_below="@+id/note_title">

            </jp.wasabeef.richeditor.RichEditor>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

