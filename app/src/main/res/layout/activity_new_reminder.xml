<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.elm.mycheck.login.NewReminder">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/head"
            android:padding="10dp"
            android:elevation="10dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="5dp"
                        android:textSize="35dp"
                        android:background="@drawable/round_corner"
                        android:id="@+id/start_date"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_gravity="center"
                        android:text="Alarm Type"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:id="@+id/alarm_type"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/white"
                        android:layout_height="wrap_content"
                        android:entries="@array/str_reminder_type"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:id="@+id/titl"
                android:visibility="gone"
                android:background="?attr/colorPrimary"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm Date"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Alarm Type"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/colorPrimary"
                android:layout_below="@id/titl"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_action_today"/>



                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyish"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_margin="3dp"
                            app:picker_visibleItemCount="5"
                            android:id="@+id/date_picker"/>

                        <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_margin="3dp"
                            app:picker_visibleItemCount="5"
                            android:id="@+id/time_picker"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/puzzle_layout"
                            android:layout_margin="7dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="Advanced Puzzle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textStyle="italic"
                                android:text="None"
                                android:id="@+id/puzzle_name_activity"
                                android:textColor="?attr/colorPrimary"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="7dp"
                            android:background="?attr/colorPrimary"/>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_layout"
                            android:layout_margin="7dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="Reminder title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="None"
                                android:textStyle="italic"
                                android:id="@+id/reminder_name_activity"
                                android:textColor="?attr/colorPrimary"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="7dp"
                            android:background="?attr/colorPrimary"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/repeat_mode"
                            android:layout_margin="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/repeat_title">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Week Days" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Touch on repeat dates"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="10dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/repeat_title"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:id="@+id/repeat_sunday"
                                    android:layout_height="wrap_content"
                                    android:text="S" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="?attr/colorPrimary"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:id="@+id/repeat_monday"
                                    android:textSize="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="M" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="?attr/colorPrimary"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:id="@+id/repeat_tuesday"
                                    android:layout_height="wrap_content"
                                    android:text="T" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="?attr/colorPrimary"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:id="@+id/repeat_wednesday"
                                    android:textSize="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="W" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="?attr/colorPrimary"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:id="@+id/repeat_thursday"
                                    android:textSize="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="T" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="?attr/colorPrimary"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:id="@+id/repeat_friday"
                                    android:textSize="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="F" />
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="?attr/colorPrimary"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textSize="20dp"
                                    android:id="@+id/repeat_saturday"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"
                                    android:text="S" />
                            </LinearLayout>


                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="7dp"
                            android:background="?attr/colorPrimary"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/early_layout"
                            android:layout_margin="7dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="Early reminder?" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="None"
                                android:textStyle="italic"
                                android:id="@+id/reminder_early_activity"
                                android:textColor="?attr/colorPrimary"/>
                        </RelativeLayout>

                        <EditText
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:id="@+id/reminder_description"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="Notes/Description (Optional)"
                            android:gravity="top"
                            android:background="@drawable/round_corner"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="7dp"
                            android:background="?attr/colorPrimary"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/ReminderadView"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_newRemonder">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</LinearLayout>
